#!/bin/sh
#
#  This script creates the BBS.info package file.  It contains
#  constants for the compile time and date.  For each release, update
#  the version string and version number here.
#
cat <<EOF > bbs-info.ads
package BBS.info is
   pragma Pure;
   --
   --  This file is auto generated by the build script.  It should not
   --  be edited by hand.
   --
   name           : constant String  := "BBS Root";
   timestamp      : constant String  := "`date`";
   build_date     : constant String  := "`date +"%Y-%b-%d"`";
   version_string : constant String  := "V01.05";
   version_date   : constant Integer := `date +"%Y%m%d"`;  -- yyyymmdd
   version_number : constant Integer := 4;
end;
EOF
